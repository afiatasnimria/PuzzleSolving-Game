<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game.HelloController">
    <children>
        <Pane fx:id="pane" prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10;">
            <children>

                <!-- Left Image (Original) -->
                <ImageView fx:id="imageView1" fitHeight="316.0" fitWidth="350.0" layoutX="25.0" layoutY="42.0">
                    <image>
                        <Image url="@differences%20in%20dog%20at%20park%20main.jpg" />
                    </image>
                </ImageView>

                <!-- Right Image (User can click here) -->
                <ImageView fx:id="imageView2" fitHeight="316.0" fitWidth="350.0" layoutX="425.0" layoutY="42.0" onMouseClicked="#handleImageClick">
                    <image>
                        <Image url="@spot%203%20differences%20in%20dog%20at%20park%20picture%20fake.jpg" />
                    </image>
                </ImageView>

                <!-- Message Label -->
                <Label fx:id="messageLabel" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="761.0" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="" />

                <!-- Submit Button -->
                <Button fx:id="submitButton" layoutX="183.0" layoutY="367.0" onAction="#handleSubmit" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Submit" />

                <!-- Retry Button -->
                <Button fx:id="retryButton" layoutX="535.0" layoutY="367.0" onAction="#handleRetry" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Retry" />
            </children>
        </Pane>
    </children>
</AnchorPane>
