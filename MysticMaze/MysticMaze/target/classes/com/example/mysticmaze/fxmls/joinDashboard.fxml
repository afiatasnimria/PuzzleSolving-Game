<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-background-color: linear-gradient(to bottom, #0f0f1e, #1a1a2e);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mysticmaze.controllers.JoinDashboard">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="260" spacing="12" style="-fx-background-color: #202040;">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <Label style="-fx-text-fill: #ffffff; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #7cfcff, 8, 0.2, 0, 0);" text="🧑 Team Members" />

            <!-- Player Status Cards -->
            <VBox spacing="10">
                <TitledPane expanded="true" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-background-color: #2a2a44;" text="Player 1">
                    <VBox spacing="6" style="-fx-background-color: #2f2f4f;">
                        <padding><Insets bottom="6" left="6" right="6" top="6" /></padding>
                        <Label fx:id="player1Moves" style="-fx-text-fill: #ffffff;" text="Moves: 0" />
                        <Label fx:id="player1Time" style="-fx-text-fill: #ffffff;" text="Time: 00:00" />
                        <Label fx:id="player1Status" style="-fx-text-fill: #00ff88; -fx-font-weight: bold;" text="Status: Ready" />
                    </VBox>
                </TitledPane>

                <TitledPane expanded="true" style="-fx-text-fill: white; -fx-background-color: #2a2a44;" text="Player 2">
                    <VBox spacing="6" style="-fx-background-color: #2f2f4f;">
                        <padding><Insets bottom="6" left="6" right="6" top="6" /></padding>
                        <Label fx:id="player2Moves" style="-fx-text-fill: #ffffff;" text="Moves: 0" />
                        <Label fx:id="player2Time" style="-fx-text-fill: #ffffff;" text="Time: 00:00" />
                        <Label fx:id="player2Status" style="-fx-text-fill: #ffcc00; -fx-font-weight: bold;" text="Status: Waiting" />
                    </VBox>
                </TitledPane>

                <TitledPane expanded="true" style="-fx-text-fill: white; -fx-background-color: #2a2a44;" text="Player 3">
                    <VBox spacing="6" style="-fx-background-color: #2f2f4f;">
                        <padding><Insets bottom="6" left="6" right="6" top="6" /></padding>
                        <Label fx:id="player3Moves" style="-fx-text-fill: #ffffff;" text="Moves: 0" />
                        <Label fx:id="player3Time" style="-fx-text-fill: #ffffff;" text="Time: 00:00" />
                        <Label fx:id="player3Status" style="-fx-text-fill: #ff4444; -fx-font-weight: bold;" text="Status: Offline" />
                    </VBox>
                </TitledPane>
            </VBox>

            <!-- Message Area -->
            <Label style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-padding: 10 0 0 0;                           -fx-effect: dropshadow(gaussian, #00ffff, 6, 0.2, 0, 0);" text="💬 Team Chat" />
            <ScrollPane fitToWidth="true" prefHeight="136.0" prefWidth="230.0" style="-fx-background: #1e1e2e;">
                <VBox fx:id="chatVBox" prefHeight="115.0" prefWidth="228.0" spacing="1.0" style="-fx-background-color: #333355;">
                    <padding>
                        <Insets bottom="2.0" left="10.0" right="5.0" top="2.0" />
                    </padding>
                    <Label style="-fx-text-fill: #ffffff;" text="Player1: Let's go!" wrapText="true" />
                    <Label prefHeight="19.0" prefWidth="81.0" style="-fx-text-fill: #ffffff;" text="Player2: Ready!" wrapText="true" />
                </VBox>
            </ScrollPane>
         <TextArea fx:id="messageField" prefHeight="22.0" prefWidth="208.0" promptText="Write to your mates " />
        </VBox>
    </left>

    <!-- Main Area -->
    <center>
        <AnchorPane prefHeight="618.0" prefWidth="553.0">
            <!-- Background image -->
            <ImageView fitHeight="633.0" fitWidth="561.0" layoutX="0" layoutY="0" preserveRatio="false">
                <image>
                    <Image url="@../images/log.png" />
                </image>
            </ImageView>

            <!-- Level 1 -->
            <StackPane layoutX="220" layoutY="470">
                <Button onAction="#handleLevel1" prefHeight="60" prefWidth="60" style="-fx-background-radius: 50em; -fx-border-radius: 50em;                            -fx-background-color: radial-gradient(center 50% 50%, radius 60%, #00ffff, #003344),                                                  linear-gradient(from 0% 0% to 100% 100%, #00ffff88, #001111cc),                                                  linear-gradient(from 0% 0% to 0% 100%, #00ffffcc 0%, #003344 100%);                            -fx-border-color: #66ffff; -fx-border-width: 2px;                            -fx-effect: dropshadow(gaussian, #00ffff, 30, 0.8, 0, 0);                            -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="1" />
                <Label fx:id="lock1" style="-fx-font-size: 22px; -fx-text-fill: white;" text="🔒" visible="false" />
            </StackPane>

            <!-- Level 2 -->
            <StackPane layoutX="120" layoutY="390">
                <Button  onAction="#handleLevel2" prefHeight="60" prefWidth="60" style="-fx-background-radius: 50em; -fx-border-radius: 50em;                            -fx-background-color: radial-gradient(center 50% 50%, radius 60%, #00ffff, #003344),                                                  linear-gradient(from 0% 0% to 100% 100%, #00ffff88, #001111cc),                                                  linear-gradient(from 0% 0% to 0% 100%, #00ffffcc 0%, #003344 100%);                            -fx-border-color: #66ffff; -fx-border-width: 2px;                            -fx-effect: dropshadow(gaussian, #00ffff, 30, 0.8, 0, 0);                            -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="2" />
                <Label fx:id="lock2" style="-fx-font-size: 22px; -fx-text-fill: white;" text="🔒" visible="false" />
            </StackPane>

            <!-- Level 3 -->
            <StackPane layoutX="230" layoutY="340">
                <Button  onAction="#handleLevel3" prefHeight="60" prefWidth="60" style="-fx-background-radius: 50em; -fx-border-radius: 50em;                            -fx-background-color: radial-gradient(center 50% 50%, radius 60%, #00ffff, #003344),                                                  linear-gradient(from 0% 0% to 100% 100%, #00ffff88, #001111cc),                                                  linear-gradient(from 0% 0% to 0% 100%, #00ffffcc 0%, #003344 100%);                            -fx-border-color: #66ffff; -fx-border-width: 2px;                            -fx-effect: dropshadow(gaussian, #00ffff, 30, 0.8, 0, 0);                            -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="3" />
                <Label  fx:id="lock3" style="-fx-font-size: 22px; -fx-text-fill: white;" text="🔒" visible="false" />
            </StackPane>

            <!-- Level 4 -->
            <StackPane layoutX="360" layoutY="300">
                <Button  onAction="#handleLevel4" prefHeight="60" prefWidth="60" style="-fx-background-radius: 50em; -fx-border-radius: 50em;                            -fx-background-color: radial-gradient(center 50% 50%, radius 60%, #00ffff, #003344),                                                  linear-gradient(from 0% 0% to 100% 100%, #00ffff88, #001111cc),                                                  linear-gradient(from 0% 0% to 0% 100%, #00ffffcc 0%, #003344 100%);                            -fx-border-color: #66ffff; -fx-border-width: 2px;                            -fx-effect: dropshadow(gaussian, #00ffff, 30, 0.8, 0, 0);                            -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="4" />
                <Label fx:id="lock4" style="-fx-font-size: 22px; -fx-text-fill: white;" text="🔒" visible="false" />
            </StackPane>

            <!-- Level 5 -->
            <StackPane layoutX="230" layoutY="220">
                <Button  onAction="#handleLevel5" prefHeight="60" prefWidth="60" style="-fx-background-radius: 50em; -fx-border-radius: 50em;                            -fx-background-color: radial-gradient(center 50% 50%, radius 60%, #00ffff, #003344),                                                  linear-gradient(from 0% 0% to 100% 100%, #00ffff88, #001111cc),                                                  linear-gradient(from 0% 0% to 0% 100%, #00ffffcc 0%, #003344 100%);                            -fx-border-color: #66ffff; -fx-border-width: 2px;                            -fx-effect: dropshadow(gaussian, #00ffff, 30, 0.8, 0, 0);                            -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="5" />
                <Label fx:id="lock5" style="-fx-font-size: 22px; -fx-text-fill: white;" text="🔒" visible="false" />
            </StackPane>

            <!-- Level 6 -->
            <StackPane layoutX="350" layoutY="140">
                <Button  onAction="#handleLevel6" prefHeight="60" prefWidth="60" style="-fx-background-radius: 50em; -fx-border-radius: 50em;                            -fx-background-color: radial-gradient(center 50% 50%, radius 60%, #00ffff, #003344),                                                  linear-gradient(from 0% 0% to 100% 100%, #00ffff88, #001111cc),                                                  linear-gradient(from 0% 0% to 0% 100%, #00ffffcc 0%, #003344 100%);                            -fx-border-color: #66ffff; -fx-border-width: 2px;                            -fx-effect: dropshadow(gaussian, #00ffff, 30, 0.8, 0, 0);                            -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="6" />
                <Label fx:id="lock6" style="-fx-font-size: 22px; -fx-text-fill: white;" text="🔒" visible="false" />
            </StackPane>

            <!-- Start Button -->
            <Button fx:id="startGameButton" layoutX="308.0" layoutY="582.0" prefHeight="35.0" prefWidth="72.0" style="-fx-font-size: 15px; -fx-background-color: linear-gradient(to bottom, #8f00ff, #5b00b3);                        -fx-text-fill: white; -fx-background-radius: 15;                        -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #c586ff, 12, 0.5, 0, 0);                        -fx-cursor: hand;" text="🚀Start">
                <font>
                    <Font size="8.0" />
                </font>
            </Button>
         <Button alignment="CENTER" contentDisplay="CENTER" layoutY="582.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="25.0" prefWidth="49.0" style="-fx-background-color: pink;" text="Send">
            <effect>
               <Glow />
            </effect>
         </Button>
        </AnchorPane>
    </center>
   <right>
      <VBox prefHeight="633.0" prefWidth="218.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="55.0" prefWidth="212.0" style="-fx-background-color: yellow; -fx-font-size: 20;" text="Room Info" />
            <Label prefHeight="69.0" prefWidth="209.0" style="-fx-font-size: 15;" text="Room Name" textFill="#f8f1f1">
               <effect>
                  <Glow level="0.93" />
               </effect>
            </Label>
            <Label prefHeight="57.0" prefWidth="212.0" style="-fx-font-size: 15;" text="Room Code" textFill="#f8f1f1">
               <effect>
                  <Glow level="0.93" />
               </effect>
            </Label>
            <Label prefHeight="56.0" prefWidth="213.0" style="-fx-font-size: 15;" text="Room Creator" textFill="#f8f1f1">
               <effect>
                  <Glow level="0.93" />
               </effect>
            </Label>
            <Label prefHeight="47.0" prefWidth="208.0" style="-fx-font-size: 15;" text="Creation Date" textFill="#f8f1f1">
               <effect>
                  <Glow level="0.93" />
               </effect>
            </Label>
            <Button fx:id="startGameButton1" prefHeight="37.0" prefWidth="211.0" style="-fx-font-size: 15px; -fx-background-color: linear-gradient(to bottom, #8f00ff, #5b00b3); -fx-text-fill: white; -fx-background-radius: 15; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #c586ff, 12, 0.5, 0, 0); -fx-cursor: hand;" text="Leave">
               <font>
                  <Font size="8.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </right>

    <!-- Back Button -->
    <Button layoutX="51.0" layoutY="72.0" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-cursor: hand;" text="← Return">
        <effect>
            <Glow level="0.3" />
        </effect>
    </Button>


</BorderPane>
