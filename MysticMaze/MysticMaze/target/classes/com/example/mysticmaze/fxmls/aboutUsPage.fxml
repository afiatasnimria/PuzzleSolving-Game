<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mysticmaze.controllers.AboutUsController"
            style="-fx-background-color: transparent;">
   <children>

      <!-- Background image -->
      <ImageView fitHeight="600.0" fitWidth="900.0" preserveRatio="false">
         <image>
            <Image url="@../images/log.png" />
         </image>
      </ImageView>

      <!-- Glassmorphic pane -->
      <VBox layoutX="200.0" layoutY="120.0" spacing="20.0"
            alignment="TOP_CENTER" prefWidth="500.0"
            style="-fx-background-color: rgba(255,255,255,0.08); -fx-background-radius: 20; -fx-padding: 30;">
         <effect>
            <DropShadow radius="15.0" color="#00000088" />
         </effect>

         <children>
            <Label text="About Mystic Maze" textFill="#ffffff" alignment="CENTER">
               <font>
                  <Font name="Papyrus" size="26.0"/>
               </font>
               <effect>
                  <Glow level="0.6"/>
               </effect>
            </Label>

            <Label wrapText="true" textFill="#eaeaea"
                   style="-fx-font-size: 14; -fx-text-alignment: center;">
               <text>
                  Mystic Maze is a magical team-based puzzle game that combines logic, cooperation, and mystery. Explore ancient ruins, solve mystical riddles, and climb the leaderboard as your team masters each level’s unique challenges. Designed to foster collaboration and challenge wits, it’s more than a game — it’s a journey through enchanted logic.
               </text>
            </Label>
         </children>
      </VBox>

      <!-- Back Button -->
      <Button layoutX="40.0" layoutY="30.0" text="← Back"
              onAction="#handleBack"
              style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-font-size: 14;">
         <effect>
            <Glow level="0.3"/>
         </effect>
      </Button>

   </children>
</AnchorPane>
