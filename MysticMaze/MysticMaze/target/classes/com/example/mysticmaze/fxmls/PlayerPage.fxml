<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.effect.Glow?>

<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="513" prefWidth="761"
            style="-fx-background-image: url('/com/example/mysticmaze/images/log.png'); -fx-background-size: cover;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mysticmaze.controllers.PlayerController">

   <!-- User Info HBox -->
   <HBox layoutX="50" layoutY="20" spacing="15" alignment="CENTER_LEFT">
      <children>
         <VBox alignment="CENTER">
            <children>
               <ImageView fx:id="userProfileImage" fitHeight="64" fitWidth="64"
                          style="-fx-border-radius: 32; -fx-border-color: white; -fx-border-width: 2;" />
               <Label fx:id="userNameLabel" text="Username"
                      style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
            </children>
         </VBox>
      </children>
   </HBox>


   <!-- Back Button -->
   <Button layoutX="51.0" layoutY="72.0" onAction="#handleBack"
           style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-cursor: hand;"
           text="← Return">
      <effect>
         <Glow level="0.3" />
      </effect>
   </Button>

   <!-- Carousel HBox -->
   <HBox fx:id="carousel" alignment="CENTER" layoutX="60.0" layoutY="100.0" prefHeight="350.0" prefWidth="665.0" spacing="20" />

   <!-- Previous Button -->
   <Button layoutX="220.0" layoutY="440.0" onAction="#handlePrevious" prefHeight="40.0" prefWidth="129.0"
           style=" -fx-background-color: linear-gradient(to right, #4b6cb7, #182848); -fx-text-fill: #e0f7fa; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #00e5ff88, 10, 0.5, 0, 2);"
           text="⟵WanderBack" />

   <!-- Next Button -->
   <Button layoutX="381.0" layoutY="440.0" onAction="#handleNext" prefHeight="40.0" prefWidth="129.0"
           style=" -fx-background-color: linear-gradient(to right, #182848, #4b6cb7); -fx-text-fill: #e0f7fa; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #00e5ff88, 10, 0.5, 0, 2);"
           text="VentureOn⟶" />

</AnchorPane>
