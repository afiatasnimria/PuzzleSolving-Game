<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.mysticmaze.controllers.GuessGameController">

    <left>
        <VBox prefWidth="260" spacing="12" style="-fx-background-color: #202040;">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <Label style="-fx-text-fill: #ffffff; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #7cfcff, 8, 0.2, 0, 0);" text="ðŸ§‘ Team Members" />

            <!-- Player Status Cards -->
            <VBox spacing="10">
                <TitledPane expanded="true" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-background-color: #2a2a44;" text="Player 1">
                    <VBox spacing="6" style="-fx-background-color: #2f2f4f;">
                        <padding><Insets bottom="6" left="6" right="6" top="6" /></padding>
                        <Label fx:id="player1Moves" style="-fx-text-fill: #ffffff;" text="Moves: 0" />
                        <Label fx:id="player1Time" style="-fx-text-fill: #ffffff;" text="Time: 00:00" />
                        <Label fx:id="player1Status" style="-fx-text-fill: #00ff88; -fx-font-weight: bold;" text="Status: Ready" />
                    </VBox>
                </TitledPane>

                <TitledPane expanded="true" style="-fx-text-fill: white; -fx-background-color: #2a2a44;" text="Player 2">
                    <VBox spacing="6" style="-fx-background-color: #2f2f4f;">
                        <padding><Insets bottom="6" left="6" right="6" top="6" /></padding>
                        <Label fx:id="player2Moves" style="-fx-text-fill: #ffffff;" text="Moves: 0" />
                        <Label fx:id="player2Time" style="-fx-text-fill: #ffffff;" text="Time: 00:00" />
                        <Label fx:id="player2Status" style="-fx-text-fill: #ffcc00; -fx-font-weight: bold;" text="Status: Waiting" />
                    </VBox>
                </TitledPane>

                <TitledPane expanded="true" style="-fx-text-fill: white; -fx-background-color: #2a2a44;" text="Player 3">
                    <VBox spacing="6" style="-fx-background-color: #2f2f4f;">
                        <padding><Insets bottom="6" left="6" right="6" top="6" /></padding>
                        <Label fx:id="player3Moves" style="-fx-text-fill: #ffffff;" text="Moves: 0" />
                        <Label fx:id="player3Time" style="-fx-text-fill: #ffffff;" text="Time: 00:00" />
                        <Label fx:id="player3Status" style="-fx-text-fill: #ff4444; -fx-font-weight: bold;" text="Status: Offline" />
                    </VBox>
                </TitledPane>
            </VBox>

            <!-- Message Area -->
            <Label style="-fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-padding: 10 0 0 0; -fx-effect: dropshadow(gaussian, #00ffff, 6, 0.2, 0, 0);" text="ðŸ’¬ Team Chat" />
            <ScrollPane fitToWidth="true" prefHeight="200" style="-fx-background: #1e1e2e;">
                <VBox fx:id="chatBox" spacing="6" style="-fx-background-color: #333355;">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <Label style="-fx-text-fill: #ffffff;" text="Player1: Let's go!" wrapText="true" />
                    <Label style="-fx-text-fill: #ffffff;" text="Player2: Ready!" wrapText="true" />
                </VBox>
            </ScrollPane>

            <!-- Chat Input Area -->
            <HBox spacing="8" style="-fx-padding: 10 0 0 0;">
                <TextField fx:id="chatInputField" promptText="Type your message..." style="-fx-background-color: #2f2f4f; -fx-text-fill: white;" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" style="-fx-background-color: #2a2a44; -fx-text-fill: white;" text="Send" />
            </HBox>
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
            <padding><Insets top="40" right="20" bottom="40" left="20"/></padding>

            <Label fx:id="sequenceLabel" text="What comes next: 1, 8, 27"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <TextField fx:id="answerField" promptText="Enter your answer" maxWidth="200"/>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="submitButton" text="Submit"
                        style="-fx-background-color: #6200ea; -fx-text-fill: white;" />
                <Button fx:id="hintButton" text="Hint" />
            </HBox>

            <Label fx:id="timerLabel" text="Time: 0s" style="-fx-font-size: 14px;" />
        </VBox>
    </center>

    <right>
        <VBox prefWidth="250" spacing="10" style="-fx-background-color: #fff0f5; -fx-border-color: #ff69b4; -fx-border-width: 2;">
            <padding>
                <Insets bottom="15" left="10" right="10" top="15" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #8b008b;" text="ðŸ“œ Guess Game Rules " />

            <ScrollPane fitToWidth="true" prefHeight="500" style="-fx-background-color: transparent;">
                <VBox prefHeight="314.0" prefWidth="223.0" spacing="8" style="-fx-background-color: #ffe6ff; -fx-padding: 10;">
                    <Label text="1. Check the flow" wrapText="true" />
                    <Label text="2. Enter a valid no" wrapText="true" />
                    <Label text="3. No should be a Positive Integer." wrapText="true" />
                </VBox>
            </ScrollPane>
        </VBox>
    </right>

</BorderPane>