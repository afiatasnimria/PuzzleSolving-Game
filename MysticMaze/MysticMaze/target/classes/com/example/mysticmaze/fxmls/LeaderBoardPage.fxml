<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="513.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mysticmaze.controllers.LeaderBoardController">

   <children>

      <!-- Mystic Background -->
      <ImageView fitHeight="600.0" fitWidth="1000.0">
         <image>
            <Image url="@../images/log.png" />
         </image>
      </ImageView>

      <!-- Trophy Image (Zoom effect applied in controller) -->
      <ImageView fx:id="trophyImage" fitHeight="129.0" fitWidth="108.0" layoutX="450.0" layoutY="40.0" preserveRatio="true">
         <image>
            <Image url="@../images/trophy.png" />
         </image>
      </ImageView>

      <!-- Champion Title -->
      <Label layoutX="384.0" layoutY="146.0" prefHeight="111.0" prefWidth="259.0"
             style="-fx-effect: dropshadow(gaussian, black, 12, 0.8, 0, 0);"
             text="CHAMPION" textFill="#FFD700">
         <font>
            <Font name="Papyrus" size="30.0" />
         </font>
      </Label>

      <!-- Champion Name -->
      <Label fx:id="championLabel" layoutX="450.0" layoutY="254.0"
             style="-fx-font-weight: bold; -fx-effect: dropshadow(gaussian, cyan, 15, 0.9, 0, 0);"
             text="Player X" textFill="#00FFFF">
         <font>
            <Font name="Cinzel Decorative" size="24.0" />
         </font>
      </Label>

      <!-- Left Players -->
      <Label layoutX="133.0" layoutY="150.0" style="-fx-effect: dropshadow(gaussian, cyan, 10, 0.8, 0, 0);" text="Player A" textFill="white">
         <font><Font size="18.0" /></font>
      </Label>
      <Label layoutX="133.0" layoutY="211.0" style="-fx-effect: dropshadow(gaussian, cyan, 10, 0.8, 0, 0);" text="Player B" textFill="white">
         <font><Font size="18.0" /></font>
      </Label>
      <Label layoutX="131.0" layoutY="272.0" style="-fx-effect: dropshadow(gaussian, cyan, 10, 0.8, 0, 0);" text="Player C" textFill="white">
         <font><Font size="18.0" /></font>
      </Label>
      <Label layoutX="132.0" layoutY="333.0" style="-fx-effect: dropshadow(gaussian, cyan, 10, 0.8, 0, 0);" text="Player D" textFill="white">
         <font><Font size="18.0" /></font>
      </Label>

      <!-- Right Players -->
      <Label layoutX="830.0" layoutY="150.0" style="-fx-effect: dropshadow(gaussian, orange, 10, 0.8, 0, 0);" text="Player W" textFill="white">
         <font><Font size="18.0" /></font>
      </Label>
      <Label layoutX="830.0" layoutY="211.0" style="-fx-effect: dropshadow(gaussian, orange, 10, 0.8, 0, 0);" text="Player X" textFill="white">
         <font><Font size="18.0" /></font>
      </Label>
      <Label layoutX="830.0" layoutY="272.0" style="-fx-effect: dropshadow(gaussian, orange, 10, 0.8, 0, 0);" text="Player Y" textFill="white">
         <font><Font size="18.0" /></font>
      </Label>
      <Label layoutX="830.0" layoutY="333.0" style="-fx-effect: dropshadow(gaussian, orange, 10, 0.8, 0, 0);" text="Player Z" textFill="white">
         <font><Font size="18.0" /></font>
      </Label>

      <!-- Back Button -->
      <Button layoutX="38.0" layoutY="40.0" onAction="#handleBack"
              text="â†© Back"
              style="-fx-font-size: 18px;
                     -fx-background-color: rgba(0, 0, 0, 0.5);
                     -fx-text-fill: #ffffff;
                     -fx-background-radius: 14;
                     -fx-padding: 8 20 8 20;
                     -fx-border-color: #00ffff;
                     -fx-border-radius: 14;
                     -fx-border-width: 2px;
                     -fx-cursor: hand;
                     -fx-effect: dropshadow(gaussian, #00ffff, 10, 0.6, 0, 0);" />
   </children>
</AnchorPane>
