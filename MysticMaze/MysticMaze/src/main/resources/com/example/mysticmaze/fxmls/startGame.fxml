<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="511.0" prefWidth="759.0" style="-fx-background-image: url('../images/start_background.png'); -fx-background-size: cover;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mysticmaze.controllers.StartGameController">
    <!-- Background image -->
    <ImageView fitHeight="513.0" fitWidth="769.0" preserveRatio="false">
        <image>
            <Image url="@../images/log.png" />
        </image>
    </ImageView>

    <VBox alignment="TOP_CENTER" layoutX="200" layoutY="50" spacing="20">
        <children>
            <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, #a478f9, 6, 0.7, 0, 0);" text="Choose Your Hero" textFill="#ffffff" />

            <ComboBox fx:id="avatarSelect" prefWidth="250" promptText="Select Avatar" style="-fx-background-radius: 12; -fx-font-size: 16px;" />

            <ImageView fx:id="avatarPreview" fitHeight="200" fitWidth="200" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, #663399, 15, 0.5, 0, 0);" />

            <Button onAction="#startAdventure" prefHeight="45" prefWidth="220" style="-fx-background-color: linear-gradient(#654ea3, #eaafc8);                            -fx-text-fill: white;                            -fx-font-weight: bold;                            -fx-background-radius: 20;                            -fx-font-size: 18px;                            -fx-cursor: hand;                            -fx-effect: dropshadow(gaussian, #a478f9, 8, 0.8, 0, 1);" text="Start Adventure" />
        </children>
    </VBox>
</AnchorPane>
